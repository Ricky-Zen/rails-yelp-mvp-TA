<div class="container">
  <h2 style="text-align:center" class="mt-5">Discover our restaurants</h2>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-4 d-flex align-items-stretch my-4">
        <div class="card" style="width: 22rem;">
          <%= image_tag "resto.jpg"%>
            <div class="card-body d-flex flex-column">
               <div class="card-header text-center mt-auto">
                <%= restaurant.category %>
               </div>
              <ul class="list-group list-group-flush mt-auto">
                <li class="list-group-item"><h5 class="text-primary mb-0 text-center"><strong><%= restaurant.name %></strong></h5></li>
                <li class="list-group-item">
                  <p class="mt-2 mb-4">
                    📍 <%= restaurant.address %> <br>
                    📞 <%= restaurant.phone_number %>
                  </p>
                </li>
              </ul>
              <div class="mt-auto">
              <%= link_to "Discover more", restaurant_path(restaurant), class: "btn btn-ghost" %>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
